{% extends 'base.html.twig' %}

{% block title %}BlogPost index{% endblock %}

{% block body %}
    <h1>BlogPost index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Chapo</th>
                <th>Contenu</th>
                <th>LastUpdated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_post in blog_posts %}
            <tr>
                <td>{{ blog_post.id }}</td>
                <td>{{ blog_post.titre }}</td>
                <td>{{ blog_post.chapo }}</td>
                <td>{{ blog_post.contenu }}</td>
                <td>{{ blog_post.lastUpdated ? blog_post.lastUpdated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_blog_post_show', {'id': blog_post.id}) }}">show</a>
                    <a href="{{ path('app_blog_post_edit', {'id': blog_post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blog_post_new') }}">Create new</a>
{% endblock %}
