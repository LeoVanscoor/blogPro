{% extends 'base.html.twig' %}

{% block body %}
	<!-- Section pour les messages d'erreur -->
	<section class="full-width">
		<div class="container mt-5">
			{% for flash_message in app.session.flashbag.get('error') %}
				<div class="alert alert-danger">
					{{ flash_message }}
				</div>
			{% endfor %}
		</div>
	</section>

	<!-- Section pour l'introduction -->
	<section class="full-width section text-center mb-5">
		<div class="container">
			<h1 class="display-4">Créer avec passion, coder avec innovation.</h1>
			<p class="lead">Chaque projet est une nouvelle aventure qui me permet de découvrir et de m'améliorer constamment. En combinant passion et créativité, j’aborde chaque défi avec une perspective fraîche et innovante. Travailler avec moi, c'est choisir quelqu'un qui est aussi enthousiaste que vous pour explorer et réaliser des idées ambitieuses.</p>
		</div>
	</section>

	<!-- Section pour les messages de succès -->
	<section class="full-width">
		<div class="container">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
		</div>
	</section>

	<!-- Section pour le formulaire de contact -->
	<section id="contact" class="full-width light-background mb-5 about">
		<div class="section-title">
			<h2>Contactez moi</h2>
		</div>
		<div class="container">
			{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
			<div class="form-group">
				{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group" style="text-align:center;margin:10px">
				{{ form_row(form.send, {'attr': {'class': 'read-more'}}) }}
			</div>
			{{ form_end(form) }}
		</div>
	</section>

	<!-- Section pour le téléchargement du CV -->
	<section id="cv" class="full-width section text-center mb-5 about">
		<div class="section-title">
			<h2>Télécharger mon cv</h2>
		</div>
		<div class="container">
			<a href="{{ asset('docs/cv.pdf') }}" class="read-more" download="CV_Leo_VANSCOOR">Télécharger mon CV</a>
		</div>
	</section>

	<!-- Section pour les connexions sociales -->
	<section id="connecter" class="full-width light-background text-center">
		<div class="section-title">
			<h2>Restons Connectés</h2>
		</div>
		<div class="container">
			<a href="https://github.com/LeoVanscoor" class="btn btn-outline-dark" target="_blank">GitHub</a>
			<a href="https://www.linkedin.com/in/leovanscoor/" class="btn btn-outline-primary" target="_blank">LinkedIn</a>
			<a href="https://www.instagram.com/leo_ffall/" class="btn btn-outline-info" target="_blank">Instagram</a>
		</div>
	</section>
{% endblock %}
